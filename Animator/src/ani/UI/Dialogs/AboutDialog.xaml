<Window x:Class="Animator.UI.Dialogs.AboutDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="About Animator" Style="{StaticResource SubWindowStyle}" ShowInTaskbar="False" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterOwner">
	<DockPanel>
		<StackPanel DockPanel.Dock="Bottom">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
				<Button Content="_OK" Width="60" IsDefault="True" IsCancel="True" Margin="2" />
			</StackPanel>
		</StackPanel>
		<Border Background="#0A3364">
			<Image Stretch="None" Name="splashImage" Source="pack://application:,,,/Resources/ani_app_splash.png" />
		</Border>
	</DockPanel>
</Window>
