<Panes:DocumentItemPropertiesPane x:Class="Animator.UI.Panes.TrackOverviewPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Panes="clr-namespace:Animator.UI.Panes" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="140" Style="{StaticResource DocumentItemPropertiesPaneStyle}" DetailButtonVisibility="Visible" PaneHeader="{Binding Path=Name}">
	<Panes:DocumentItemPropertiesPane.CommandBindings>
		<CommandBinding Command="Panes:DocumentItemPropertiesPane.ShowEditDetailCommand" Executed="ShowEditDetailCommand_Executed" />
	</Panes:DocumentItemPropertiesPane.CommandBindings>
	<StackPanel>
		<ListBox ItemsSource="{Binding Path=Clips}" HorizontalContentAlignment="Stretch" Background="{x:Null}" SelectedItem="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Panes:TrackOverviewPane}, Path=SelectedClip}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border BorderThickness="1" BorderBrush="{StaticResource PaneBorderBrush}">
						<TextBlock Text="{Binding Path=Name}" />
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</StackPanel>
</Panes:DocumentItemPropertiesPane>
