<UserControl x:Class="Animator.UI.Clips.ClipPropertiesEditor"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:clips="clr-namespace:Animator.Core.Model.Clips;assembly=anicore"
						 xmlns:clipsUI="clr-namespace:Animator.UI.Clips" mc:Ignorable="d" 
						 d:DesignHeight="300" d:DesignWidth="300"
						 d:DataContext="{d:DesignData Source=../../Design/Data/SequenceClip.xaml}"
						 Style="{StaticResource PaneUserControlStyle}">
	<Grid>
		<ListBox Style="{StaticResource CleanListBoxStyle}" ItemsSource="{Binding Path=Properties}" HorizontalContentAlignment="Stretch">
			<ListBox.ItemTemplate>
				<DataTemplate DataType="{x:Type clips:ClipPropertyData}">
					<HeaderedContentControl Style="{StaticResource SideHeaderedStyle}"
																	ContentTemplateSelector="{StaticResource ClipPropertyDataTemplateSelector}"
																	MinHeight="50">
						<HeaderedContentControl.Header>
							<StackPanel MinWidth="50">
								<TextBox Text="{Binding Name}" />
							</StackPanel>
						</HeaderedContentControl.Header>
					</HeaderedContentControl>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
